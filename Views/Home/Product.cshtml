@model SuperMarketSystem.DTOs.CustomerProductDTO
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
    
*@

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/CustomerLayout/_Layout.cshtml";
}
<div class="card text-center m-5">
   <div class="row">
       <div class="col-5">
            @if (Model.ImageName.Count() != 0)
            {
                <div class="m-3">
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img decoding="async" src="@("~/image/"+Model.ImageName.First())" height="450px" width="450px" asp-append-version="true" class="d-block" />
                            </div>
                            @foreach (var item in Model.ImageName)
                            {
                                @if (item.Equals(Model.ImageName.First()))
                                {
                                    continue;
                                }
                                <div class="carousel-item">
                                    <img decoding="async" src="@("~/image/"+item)" asp-append-version="true" height="450px" width="450px" class="d-block" />
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            }
       </div>
   </div>
</div>