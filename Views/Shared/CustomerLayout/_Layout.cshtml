<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperMarketSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/SuperMarketSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CustomerSide.css" asp-append-version="true" />
</head>
<body>
    <div>
        <div>
            @await Html.PartialAsync("_navbar")
        </div>
        <div class="viewheight-100">
            <main role="main" class="container-fluid">
                @RenderBody()
            </main>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    var averageRating = parseFloat($("#averageRating").data("average-rating"));

    var starRating = Math.floor(averageRating);
    var hasHalfStar = Math.round(averageRating) !== starRating; 

    for (var i = 0; i < 5; i++) {
        var starElement = $(".star").eq(i);

        if (i < starRating) {
            starElement.addClass("filled");
        } else if (i === starRating && hasHalfStar) {
            starElement.addClass("half-filled");
        } else {
            starElement.removeClass("filled");
            starElement.removeClass("half-filled");
        }
    }

    // Hiển thị số điểm trung bình
    $("#averageRating").text(averageRating);

    function decreaseValue() {
        var valueField = document.getElementById("valueField");
        var value = parseInt(valueField.value);
        value = value - 1 < 0 ? 0 : value -1;
        valueField.value = value;
    }

    function increaseValue() {
        var valueField = document.getElementById("valueField");
        var value = parseInt(valueField.value);
        var maxValue = parseInt(valueField.getAttribute("max"));

        value = value + 1 > maxValue ? maxValue : value + 1;
        valueField.value = value;
    }
</script>
